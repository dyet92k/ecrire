<%= content_tag :header, as: 'Post.Header', id: 'PostHeader', href: admin_post_image_path(@post), method: 'post' do %>

  <%= content_for :post_buttons do %>
    <%= link_to 'Administration', admin_root_path, class: %w(button) %>
    <%= link_to 'Edit', edit_admin_post_path(@post), class: %w(button) %>
  <% end %>

  <%= render 'admin/posts/header/base', post: @post %>
<% end %>

<section id='PostPreview'>
  <%= content_tag :article, @post.content.html %>
<section>
